<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressPicture="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".ui.SWCharacterDetailActivity">


    <com.bluehomestudio.progressimage.ProgressPicture
        android:id="@+id/loading_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/star_war"
        android:background="@android:color/transparent"
        ProgressPicture:animation="fade" />

    <ImageView
        android:id="@+id/home_planet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="2"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="2"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>